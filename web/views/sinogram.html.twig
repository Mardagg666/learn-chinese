{% extends "base.html.twig" %}

{% block content %}
    <div class="row">
        <div class="progression" style="width: {{ ((currentIndex + 1) * 100) / (history | length) }}%;"></div>
    </div>

    <div class="container">
        <p>{{ history | length }} sinogrammes vus</p>
        <ul class="pager">
            {% if currentIndex > 0 %}
                <li class="previous">
                    <a class="btn btn-" href="{{ path('history', {currentIndex: 0}) }}"><span class="glyphicon glyphicon-time"></span> Début de la session</a>
                </li>
            {% endif %}
            <li class="next">
                <a class="pull-right" href="{{ path('randomize') }}"><span class="glyphicon glyphicon-eye-open"></span> Nouveau sinogramme</a>
            </li>
        </ul>

        <div class="row sinogram">
            <div class="col-xs-6">
                <div class="character">{{ sinogram['character'] }}</div>
                <em class="text-muted">{{ sinogram['pinyin'] }}</em>
            </div>
            <div class="col-xs-6 translation">
                {{ sinogram['french'] }}
            </div>
        </div>

        <ul class="pager">
            {% if currentIndex > 0 %}
                <li class="previous">
                    <a href="{{ path('history', {currentIndex: (currentIndex - 1)}) }}"><span class="glyphicon glyphicon-chevron-left"></span> Précédent (historique)</a>
                </li>
            {% endif %}
            {% if (currentIndex + 1) < (history | length) %}
                <li class="next">
                    <a class="pull-right" href="{{ path('history', {currentIndex: (currentIndex + 1)}) }}">Suivant (historique) <span class="glyphicon glyphicon-chevron-right"></span></a>
                </li>
            {% endif %}
        </ul>
    </div>
{% endblock %}